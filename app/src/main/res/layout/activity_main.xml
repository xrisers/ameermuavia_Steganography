<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".MainActivity">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_mainActivity"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="@android:color/white"
            android:background="?attr/colorPrimary">
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="25dp"
            android:paddingEnd="25dp"
            android:layout_marginTop="20dp"
            android:weightSum="2"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/carView_encode"
                android:layout_width="0dp"
                android:layout_height="160dp"
                app:cardCornerRadius="25dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/navy_blue_dark"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/encrypt_pic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_enry"
                        android:layout_marginTop="30dp"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/line"
                        android:layout_below="@id/encrypt_pic"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/line"
                        android:text="Encode Message"
                        android:textColor="#fff"
                        android:layout_marginTop="10dp"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/gotham"
                        android:textSize="15sp"
                        />



                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/carView_decode"
                android:layout_width="0dp"
                android:layout_height="160dp"
                app:cardCornerRadius="25dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/navy_blue_dark"
                android:layout_marginStart="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/decrypt_pic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_mail"
                        android:layout_marginTop="30dp"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/line"
                        android:layout_below="@id/decrypt_pic"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/line2"
                        android:text="Decode Message"
                        android:textColor="#fff"
                        android:layout_marginTop="10dp"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/gotham"
                        android:textSize="15sp"
                        />


                </RelativeLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:paddingStart="25dp"
            android:paddingRight="25dp"
            android:layout_height="wrap_content"
            android:weightSum="2"
            >


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_sendImage"
                android:layout_width="0dp"
                android:layout_height="160dp"
                app:cardCornerRadius="25dp"
                app:cardBackgroundColor="@color/navy_blue_dark"
                android:layout_margin="5dp"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/share"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_share_img"
                        android:layout_marginTop="30dp"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:id="@+id/line3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/line"
                        android:layout_below="@id/share"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/line3"
                        android:text="Send Image"
                        android:layout_marginTop="10dp"
                        android:textColor="#fff"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/gotham"
                        android:textSize="15sp"
                        />



                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:id="@+id/cardView_aboutUs"
                app:cardCornerRadius="30dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/navy_blue_dark"
                android:layout_marginStart="10dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/aboutUs"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_about_us"
                        android:layout_marginTop="30dp"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:id="@+id/lin4"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/line"
                        android:layout_below="@id/aboutUs"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lin4"
                        android:text="About Us"
                        android:textColor="#fff"
                        android:layout_marginTop="10dp"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/gotham"
                        android:textSize="15sp"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
